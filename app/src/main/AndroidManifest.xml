<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.coviam.myapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".network.LoginController"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.CredentialsActivity" />
        <activity android:name=".Activity.OrderHistoryActivity" />
        <activity android:name=".Activity.LoginActivity" />
        <activity android:name=".Activity.CartPageActivity" />
        <activity android:name=".Activity.ProductListActivity" />
        <activity android:name=".Activity.SignupActivity" />
        <activity android:name=".Activity.splashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.ProductDetailActivity" />
        <activity android:name=".Activity.Main2Activity" />
        <activity
            android:name=".Activity.DisplayByCategoryActivity"
            android:noHistory="true" />
        <activity android:name=".Activity.NothingAvailableActivity" />
        <activity android:name=".Activity.MerchantActivity"></activity>
    </application>

</manifest>